<%- include partials/header.ejs %>
<body>
    <%- include partials/navbar.ejs %>     
    <div class="container">        
        <div class="card" id="formulario_pergunta">
            <div class="card-header">                
                <h3>Realizar Pergunta</h3>               
            </div>
            <div class="card-body">
                <form action="/salvarpergunta" method="POST">
                    <label for="titulo" aria-label="Titulo da pergunta">Título</label>
                    <input name="titulo" type="text" id="titulo" class="form-control" placeholder="Título"/>
                    <br/>
                    <label for="descricao" aria-label="Descricao da pergunta">Descrição</label>
                    <textarea name="descricao" id="descricao" class="form-control" placeholder="Descreva sua pergunta aqui"></textarea>
                    <br/>
                    <button class="btn btn-primary">Perguntar</button>
                </form>
            </div>
        </div>     
    </div>
</body>
