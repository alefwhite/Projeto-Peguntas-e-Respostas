<%- include partials/header.ejs %>
<body>
    <%- include partials/navbar.ejs %>    

    <div class="container">
       <h1 style="margin-top: 30px;"> <%= pergunta.titulo %> </h1>
       <p> <%= pergunta.descricao %> </p>
       <hr>
       <form action="/responder" method="POST">
           <h3>Responda</h3>
           <label for="resposta">Resposta:</label>
           <textarea name="corpo" id="resposta" placeholder="Digite sua resposta" class="form-control"></textarea><br>
           <input type="text" name="pergunta" value="<%= pergunta.id %>" hidden>
           <button class="btn btn-primary" type="submit">Responder</button>
       </form>
       <h3 style="margin-top: 30px;">Respostas</h3>
       <hr>
       <% respostas.forEach((resposta) => { %>
            <div class="card">
                <div class="card-body">
                    <p> <%= resposta.corpo %> </p> 
                </div>
            </div> <br>
       <% }) %>
    </div>

</body>
<%- include partials/footer.ejs %>
